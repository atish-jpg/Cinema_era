<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/Texttop</item>
        <item name="actionBarSize">44dp</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>
    <style name="AccountTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:windowBackground">@color/AccountBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="Theme.HangmanGame" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#000000</item>
    </style>

    <style name="EditProfileTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="actionBarSize">44dp</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>


    <style name="AppTheme.NoActionBarSplashscreen">
        <item name="android:windowBackground">@color/edit_portion</item>
        <item name="colorPrimaryDark">@color/edit_portion</item>
    </style>

    <style name="AppTheme.NoActionBarMain">
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBarViewAllFilm">
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/filmname</item>
        <item name="android:textColor">@color/Texttop</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/film_detailsTXT</item>
    </style>


    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">30dip</item>
        <item name="android:paddingStart">0dip</item>
        <item name="android:paddingEnd">6dip</item>
    </style>

    <style name="SearchView" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textSize">14dp</item>
        <item name="android:editTextColor">@color/film_detailsTXT</item>
        <item name="android:textColorHint">@color/filmname</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>


</resources>
