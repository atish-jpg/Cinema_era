<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountLogin"
    android:background="@color/AccountBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_wave__1_"
            android:orientation="vertical">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:fontFamily="serif"
            android:text="Let's sign you in"
            android:textColor="@color/AccountHeading"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="serif"
            android:text="Welcome back"
            android:textStyle="bold"
            android:textColor="@color/AccountHeading"
            android:textSize="17dp" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:rotation="1.8"
                android:background="@drawable/account_play_sign" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="114dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/logintext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:text="Login to your account"
                android:textColor="@color/Texttop"
                android:textSize="15dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EmailErrorTxt"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginTop="11dp"
            app:boxStrokeErrorColor="@color/ToolbarTitleColor"
            app:errorTextColor="@color/ToolbarTitleColor"
            app:errorIconTint="@color/ToolbarTitleColor"
            android:layout_gravity="center"
            app:boxStrokeColor="@color/colorPrimary"
            app:startIconTint="@color/filmname"
            app:endIconTint="@color/filmname"
            android:textColorHint="@color/filmname"
            app:boxStrokeWidthFocused="1dp"
            android:hint="Email address"
            app:hintTextColor="@color/Texttop"
            app:startIconDrawable="@drawable/ic_email"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editEmailAddress"
                android:layout_width="245dp"
                android:shadowColor="@color/colorPrimary"
                android:layout_height="41dp"
                android:textColor="@color/Texttop"
                android:textSize="13dp"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_gravity="center"
            app:startIconTint="@color/filmname"
            app:endIconTint="@color/filmname"
            android:textColorHint="@color/filmname"
            app:boxStrokeColor="@color/colorPrimary"
            android:layout_marginTop="7dp"
            app:boxStrokeWidthFocused="1dp"
            android:hint="Password"
            app:hintTextColor="@color/Texttop"
            app:startIconDrawable="@drawable/ic_lock"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPassword"
                android:layout_width="245dp"
                android:shadowColor="@color/colorPrimary"
                android:layout_height="41dp"
                android:textColor="@color/Texttop"
                android:textSize="13dp"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

        <Button
            android:id="@+id/button_login"
            android:layout_width="245dp"
            android:layout_height="37dp"
            android:textSize="13dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/action_menu_color"
            android:background="@drawable/account"
            android:layout_gravity="center"
            android:fontFamily="serif"
            android:text="Log in"
            android:textAllCaps="false"
            android:textStyle="bold" />

            <TextView
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Or"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/Texttop"/>

            <Button
                android:id="@+id/signup"
                android:layout_width="245dp"
                android:layout_height="37dp"
                android:textSize="13dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/action_menu_color"
                android:background="@drawable/signupborder"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:text="Sign up"
                android:textAllCaps="false"
                android:textStyle="bold" />
        </LinearLayout>
        </LinearLayout>
        </LinearLayout>
</RelativeLayout>