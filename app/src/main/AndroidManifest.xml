<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cinemaera">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cinema_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/cinema_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity android:name=".Movies"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBarViewAllFilm"/>
        <activity
            android:name=".Profile_Update"
            android:screenOrientation="portrait"
            android:parentActivityName=".ProfileUser"
            android:theme="@style/EditProfileTheme" />
        <activity
            android:name=".ProfileUser"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarViewAllFilm" />
        <activity
            android:name=".AccountSignup"
            android:screenOrientation="portrait"
            android:theme="@style/AccountTheme" />
        <activity
            android:name=".AccountLogin"
            android:screenOrientation="portrait"
            android:theme="@style/AccountTheme" />
        <activity
            android:name=".ActionViewAllFilm"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBarViewAllFilm" />
        <activity
            android:name=".LoveViewAllFilm"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBarViewAllFilm" />
        <activity
            android:name=".HorrorViewAllFilm"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBarViewAllFilm" />
        <activity
            android:name=".FavouriteFilm"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarViewAllFilm" />
        <activity android:name=".Film_gallery"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Search_activity"
            android:screenOrientation="portrait"
            android:theme="@style/SearchView" />
        <activity
            android:name=".FrontScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarSplashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarMain" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
</manifest>